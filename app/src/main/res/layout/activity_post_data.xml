<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postDataActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="418dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edittextTitleCrops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Введите пасев"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextdesiredTypeodSoil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Введите тип почвы"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextcropYield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Введите поле урожая"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextQuantityCrops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Введите количество пасева"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTexttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Введите тип урожая"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextquantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Введите количество урожая"
                android:inputType="number" />

            <Button
                android:id="@+id/buttonPostFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="postFood"
                android:text="Ввести" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>